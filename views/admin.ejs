<%- include("templates/header") %>

<h1 class="text-center mt-5">Admin Dashboard</h1>

<table class="table table-striped text-center mt-3 w-75 mx-auto">
  <thead>
    <tr>
      <th>Username</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.user_type %></td>
        <td>
  <% if (user.username !== session.username) { %>
    <form method="POST" action="/promote" style="display:inline;">
      <input type="hidden" name="username" value="<%= user.username %>">
      <button class="btn btn-danger btn-sm">Promote to Admin</button>
    </form>

    <form method="POST" action="/demote" style="display:inline; margin-left: 5px;">
      <input type="hidden" name="username" value="<%= user.username %>">
      <button class="btn btn-success btn-sm">Demote to User</button>
    </form>
  <% } else { %>
    <span class="text-muted">â€”</span>
  <% } %>
</td>

      </tr>
    <% }) %>
  </tbody>
</table>

<%- include("templates/footer") %>
