        <td><%= user.user_type %></td>
        <td>
        <td>
  <form method="POST" action="/promote" style="display:inline;">
    <input type="hidden" name="username" value="<%= user.username %>">
    <button class="btn btn-primary btn-sm">Promote</button>
  </form>

  <form method="POST" action="/demote" style="display:inline; margin-left: 5px;">
    <input type="hidden" name="username" value="<%= user.username %>">
    <button class="btn btn-warning btn-sm">Demote</button>
  </form>
</td>

        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include("templates/footer") %>
