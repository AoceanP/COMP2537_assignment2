<%- include("templates/header") %>

<h1 class="text-center mt-5">Admin Dashboard</h1>

<table class="table table-striped text-center mt-3 w-75 mx-auto">
  <thead>
    <tr>
      <th>Username</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.user_type %></td>
        <td>
          <% if (user.user_type === 'user') { %>
            <form method="POST" action="/promote" style="display:inline;">
              <input type="hidden" name="username" value="<%= user.username %>">
              <button class="btn btn-danger btn-sm">Promote to Admin</button>
            </form>
          <% } %>

          <% if (user.username !== session.username && user.user_type === 'admin') { %>
            <form method="POST" action="/demote" style="display:inline;">
              <input type="hidden" name="username" value="<%= user.username %>">
              <button class="btn btn-success btn-sm">Demote to User</button>
            </form>
          <% } %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include("templates/footer") %>
