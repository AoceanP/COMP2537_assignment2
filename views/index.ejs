<%- include("templates/header") %>

<h1 class="text-center mt-4">Welcome to Assignment 2</h1>

<% if (!session.authenticated) { %>
  <div class="d-flex justify-content-center mt-4 gap-3">
    <a href="/createUser" class="btn btn-primary m-2">Create User</a>
    <a href="/login" class="btn btn-success btn-lg">Log In</a>
  </div>
<% } else { %>
  <h2 class="text-center mt-4">Hello, <%= session.username %>!</h2>
  <div class="d-flex justify-content-center mt-3 gap-3">
    <a href="/members" class="btn btn-info btn-lg">Members Area</a>
    <a href="/logout" class="btn btn-danger btn-lg">Log Out</a>
  </div>
<% } %>

<%- include("templates/footer") %>
