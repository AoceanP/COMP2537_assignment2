<%- include("templates/header") %>

<h1 class="text-center">Welcome to Assignment 2</h1>

<% if (!session.authenticated) { %>
  <div class="d-flex justify-content-center mt-4 gap-3">
    <a href="/createUser" class="btn btn-primary">Create User</a>
    <a href="/login" class="btn btn-success">Log In</a>
  </div>
<% } else { %>
  <h2 class="text-center mt-4">Hello, <%= session.username %>!</h2>
  <div class="d-flex justify-content-center mt-3 gap-3">
    <a href="/loggedin" class="btn btn-info">Members Area</a>
    <a href="/logout" class="btn btn-danger">Log Out</a>
  </div>
<% } %>

<%- include("templates/footer") %>
